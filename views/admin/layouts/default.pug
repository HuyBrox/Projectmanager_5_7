doctype html
html
    head
        title #{pageTitle}
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="/admin/Css/style.css")

    body

        if(role.permissions.length > 0)
            .body
                include ../partials/sider.pug
                include ../partials/header.pug
                .main
                    block main

            //- Tinymce
            script(src="/tinymce/tinymce.min.js" )
            script(src="/admin/js/tinymce-config.js")
            //- End Tinymce
            script(src="/admin/js/script.js" type="module")
            script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
        else

            html
                head
                    title 404 Not Found
                    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
                    style.
                        body {
                            display: flex;
                            justify-content: center;
                            align-items: center;
                            height: 100vh;
                            background-color: #f8f9fa;
                        }
                        .error-container {
                            text-align: center;
                        }
                body
                    .error-container
                        h1.display-3.text-danger(style="font-weight: 950") Cảnh báo!
                        p.lead.text-warning(style="font-weight: 800") Bạn đã bị thu hồi mọi quyền hạn.
                        a(href='/admin/auth/logout')
                            button.btn.btn-outline-danger Logout


