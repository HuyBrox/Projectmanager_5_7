        ul
            li
                a(href=`${prefixAdmin}/dashboard`) Tổng quan
            if(role.permissions.includes('product_view'))
                li
                    a(href=`${prefixAdmin}/product`) Danh sách sản phẩm
            if(role.permissions.includes('product-category_view'))
                li
                    a(href=`${prefixAdmin}/category-product`) Danh mục sản phẩm
